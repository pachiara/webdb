<div id="search_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="_search_service" aria-hidden="true">
<%= simple_form_for @service, :url => instances_search_service_path(@service) do |f| %>
<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class='modal-header'>
      <button type="button" class="close" data-dismiss="modal" aria-label="Chiudi"><span aria-hidden="true">&times;</span></button>
      <h3 class="modal-title">Ricerca Servizio</h3>
    </div>
    <div class='modal-body'>
      <div class="modal-body-content">
        <div class="form-group">
          <%= f.input :description, input_html: { size: 30 } %>
        </div>
      </div>
    </div>
    <br />
    <div class='modal-footer'>
      <div class="form-group">
        <%= link_to instances_search_service_path(@service), :class => "btn btn-primary" do %>
          <span class="glyphicon glyphicon-ok glyphicon-inverse"></span> Cerca
        <% end %>
        <button type="button" data-dismiss="modal" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-left"></span> Chiudi
        </button>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
