<p id="notice"><%= notice %></p>

<h1>Uses</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uses.each do |use| %>
      <tr>
        <td><%= use.code %></td>
        <td><%= use.description %></td>
        <td><%= link_to 'Show', use %></td>
        <td><%= link_to 'Edit', edit_use_path(use) %></td>
        <td><%= link_to 'Destroy', use, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Use', new_use_path %>
