<!DOCTYPE html>
<html>
  <head>
    <title>Webdb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top barre">
      <%= render :partial => "layouts/header" %>
      <%= render :partial => "layouts/area_utente" %>
      <%= render 'layouts/messages' %>
    </nav>
    <%= yield %>
    <nav class="navbar navbar-default navbar-fixed-bottom barre">
      <%= render :partial => "layouts/footer" %>
    </nav>
  </body>
</html>
