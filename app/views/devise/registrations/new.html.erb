<div id="container-fluid form_web" >

<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <h2><%=t('actions.registration')%></h2>
  </div>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<div class="form-inputs">
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <%= f.input :email, required: true, autofocus: true %>
  </div>
</div>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
  </div>
</div>
<div class="row col-md-12">
  <div class="col-md-offset-2 col-md-2 col-sm-3">
    <%= f.input :password_confirmation, required: true %>
  </div>
</div>
</div>

<div class="col-md-offset-2 col-md-6">
  <%= link_to root_path, :class => "btn btn-default btn-lg", :title => t('actions.back'), :alt => t('actions.back') do %>
    <span class="glyphicon glyphicon-arrow-left"></span> <%= t('actions.back') %>
  <% end %>
  <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg") do %>
    <span class="glyphicon glyphicon-ok glyphicon-inverse"></span> <%= t('actions.sign_up') %>
  <% end %>
  <%= link_to new_password_path(resource_name), :class => "btn btn-default btn-lg" do %>
    <span class="glyphicon glyphicon-wrench"></span> <%= t('devise.actions.forgot_password') %>
  <% end %>
</div>
<% end %>
</div>
